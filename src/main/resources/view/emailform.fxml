<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="EmailController">

    <padding>
        <Insets bottom="25" left="25" right="25" top="25"/>
    </padding>

    <Label text="To:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="toTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Subject:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="subjectTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Message:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextArea fx:id="messageTextArea" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Button text="Send Email" onAction="#sendEmail" fx:id="sendButton" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label fx:id="statusLabel" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
</GridPane>
